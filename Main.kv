# File name: main.py
#: kivy 2.0.0

# black [41/250, 43/250, 44/250,1]
# white [247/250, 247/250, 247/250,1]


<Button>:
    color: [41/250, 43/250, 44/250,1]
    background_color: [247/250, 247/250, 247/250,1]
    background_normal: ''
    background_disabled_normal: ''
    disabled_color: [41/250, 43/250, 44/250,1]


ScreenManagement:
    MainScreen:
    WarmUpScreen:

<MainScreen>:
    name: 'main'
    GridLayout:
        cols: 1
        padding: [root.width/10,root.height/10,root.width/10, root.height/10]
        Button:
            on_release:
                #app.root.current = ''
                root.manager.transition.direction = 'left'
            text: 'online match'
        Label:
            size_hint_y: 0.05
        Button:
            on_release:
                app.root.current = 'warmup'
                root.manager.transition.direction = 'left'
                root.manager.children[0].clock()
            text: 'warm up'
        Label:
            size_hint_y: 0.05
        Button:
            on_release:
                #app.root.current = ''
                root.manager.transition.direction = 'left'
            text: '1v1 offline'
        Label:
            size_hint_y: 0.05
        Button:
            on_release:
                #app.root.current = ''
                root.manager.transition.direction = 'left'
            text: 'score board'
        Label:
            size_hint_y: 0.05

<WarmUpScreen>:
    name: 'warmup'
    board: board
    score_label: score_label
    changed_score_label: changed_score_label
    time_label: time_label

    GridLayout:
        cols:1
        GridLayout:
            cols:3
            size_hint_y: 0.2
            Label:
            Label:
            Button:
                text: 'back'
                on_press:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
                    root.clock.cancel()

        GridLayout:
            cols: 4
            size_hint_y: 0.4
            padding: [0, root.height/10*0.4]
            Button:
                text: 'leifer (532)'
                background_color: [41/250, 43/250, 44/250,1]
                color: [247/250, 247/250, 247/250,1]
            Button:
                id: score_label
                text: '0'
                bold: True
                background_color: [41/250, 43/250, 44/250,1]
                color: [247/250, 247/250, 247/250,1]
            Button:
                id: changed_score_label
                text: ''
                background_color: [41/250, 43/250, 44/250,1]
                color: [247/250, 247/250, 247/250,1]
            Button:
                id: time_label
                text: '00:00'
                background_color: [41/250, 43/250, 44/250,1]
                color: [247/250, 247/250, 247/250,1]


        GridLayout:
            cols:3
            Label:
            GridLayout:
                id: board
                cols: 3
                size_hint: None, None
                width: root.width/10*9
                height: self.width
            Label:
        GridLayout:
            cols:3
            Label:
            GridLayout:
                cols: 5
                size_hint: None, None
                width: root.width/10*8
                height: root.height/10*1.5
                Button:
                    text: '1'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '2'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '3'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '4'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '5'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '6'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '7'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '8'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '9'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '#'
                    on_press:
                        root.numba_press(self)
            Label:
        Label:
            size_hint: None, None
            height: root.height/10*1




