# File name: main.py
#: kivy 2.0.0

<Button>:
    color: [41/250, 43/250, 44/250,1]
    background_color: [247/250, 247/250, 247/250,1]
    background_normal: ''
    background_disabled_normal: ''
    disabled_color: [41/250, 43/250, 44/250,1]


ScreenManagement:
    QuickGame:
    MainScreen:

<MainScreen>:
    name: 'main'
    FloatLayout:
        Button:
            on_release:
                app.root.current = 'quickgame'
                root.manager.transition.direction = 'left'
            text: 'quick match'
            font_size: self.height / 4
            size_hint: 0.6,0.1
            pos_hint: {'right':0.8,'top':0.8}

<QuickGame>:
    name: 'quickgame'
    board: board

    GridLayout:
        cols:1
        GridLayout:
            cols:3
            size_hint_y: 0.2
            Label:
            Label:
            Button:
                text: 'back'
                on_press:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'

        Label:
            size_hint_y: 0.4
        GridLayout:
            cols:3
            Label:
            GridLayout:
                id: board
                cols: 3
                size_hint: None, None
                width: root.width/10*9
                height: self.width
            Label:
        GridLayout:
            cols:3
            Label:
            GridLayout:
                cols: 5
                size_hint: None, None
                width: root.width/10*8
                height: root.height/10*1.5
                Button:
                    text: '1'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '2'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '3'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '4'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '5'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '6'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '7'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '8'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '9'
                    on_press:
                        root.numba_press(self)
                Button:
                    text: '#'
                    on_press:
                        root.numba_press(self)
            Label:
        Label:
            size_hint: None, None
            height: root.height/10*1




