# File name: main.py
#: kivy 2.0.0


ScreenManagement:
    QuickGame:
    MainScreen:
    QuickGame:

<MainScreen>:
    name: 'main'
    FloatLayout:
        Button:
            on_release:
                app.root.current = 'quickgame'
                root.manager.transition.direction = 'left'
            text: 'quick match'
            font_size: self.height / 4
            size_hint: 0.6,0.1
            #pos: root.right-self.width,root.top-self.height
            pos_hint: {'right':0.8,'top':0.8}

<QuickGame>:
    name: 'quickgame'
    board: board

    GridLayout:
        cols:1
        GridLayout:
            cols:3
            size_hint_y: 0.2
            Label:
            Label:
            Button:
                text: 'back'
                on_press:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'

        Label:
            size_hint_y: 0.4
        GridLayout:
            cols:3
            Label:
            GridLayout:
                id: board
                cols: 3
                size_hint: None, None
                width: root.width/10*9
                height: self.width
            Label:
        GridLayout:
            cols:3




